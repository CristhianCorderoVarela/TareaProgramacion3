<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.una.tareaprogramacion3.controller.Ventana2Controller"
            prefWidth="900" prefHeight="500">

    
    <left>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <children>
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <children>
                        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNombre" promptText="Nombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Apellidos:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtApellidos" promptText="Apellidos" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Cédula:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCedula" promptText="Cédula" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Correo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCorreo" promptText="Correo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Usuario:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtUsuario" promptText="Usuario" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Contraseña:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="txtContrasena" promptText="Contraseña" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Estado:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbEstado" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10">
                    <children>
                        <Button fx:id="btnAgregar" text="Agregar"/>
                        <Button fx:id="btnEditar" text="Editar"/>
                        <Button fx:id="btnEliminar" text="Eliminar"/>
                    </children>
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </left>

    
    <center>
        <TableView fx:id="tabla" prefWidth="600">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="100"/>
                <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="120"/>
                <TableColumn fx:id="colCedula" text="Cédula" prefWidth="100"/>
                <TableColumn fx:id="colCorreo" text="Correo" prefWidth="150"/>
                <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="100"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="80"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
